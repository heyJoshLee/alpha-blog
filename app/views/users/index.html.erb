<h1>Users</h1>
<%= will_paginate @users, list_classes: %w(pagination justify-content-center), previous_label: "Previous", next_label: "Next" %>  

<ul>
  <% @users.each do |user| %>
  <li> 
    <h4><%= link_to user.username, user %></h4>
    <div>
      <%= gravatar_for user %>
    </div>
    <p><%= pluralize(user.articles.count, "article") %></p>
  </li>
  <% end %>
</ul>